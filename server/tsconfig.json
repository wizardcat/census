{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "extends": "./tsconfig.paths.json",
  "include": ["src/**/*"],
  "type": "module",
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["esnext"],
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "target": "ES2021",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
