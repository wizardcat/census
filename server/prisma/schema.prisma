// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model LangGroup {
  id      Int     @id @default(autoincrement())
  name_uk String?
  name_en String?
  name_ru String?
  lang    Lang[]  @relation(name: "LangGroup")
}

model Lang {
  id          Int       @id @default(autoincrement())
  name_uk     String?
  name_en     String?
  name_ru     String?
  langGroup   LangGroup @relation(name: "LangGroup", fields: [langGroupId], references: [id])
  langGroupId Int
  census      Census[]  @relation(name: "CensLang")
}

model Region {
  id         Int      @id @default(autoincrement())
  children   Region[] @relation("SubRegions")
  parent     Region?  @relation("SubRegions", fields: [parentId], references: [id])
  parentId   Int?
  name_uk    String?
  name_en    String?
  name_ru    String?
  europePart Int
  census     Census[] @relation(name: "CensRegion")
}

model Census {
  id       Int    @id @default(autoincrement())
  males    Int
  females  Int
  lang     Lang   @relation(name: "CensLang", fields: [langId], references: [id])
  langId   Int
  region   Region @relation(name: "CensRegion", fields: [regionId], references: [id])
  regionId Int
}
